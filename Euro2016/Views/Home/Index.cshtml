    </a>*@
</div><!-- /.carousel -->
<!-- Featurettes
================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->

<div class="container">

    <div class="row featurette">
        <div class="col-md-7">
            <h2 class="featurette-heading">Fixtures. <span class="text-muted">All the matches.</span></h2>
            <p class="lead">
                See upcoming fixtures and scores for completed games.
                You can also give your predictions here.
            </p>
            @Html.ActionLink("Go to fixtures", "Fixtures", "Home", null, new { @class = "btn btn-default" })
        </div>
        <div class="col-md-5">
            <img class="featurette-image img-responsive center-block" src="~/Content/logo.png" alt="Generic placeholder image">
        </div>
    </div>

    <hr class="featurette-divider">

    <div class="row featurette">
        <div class="col-md-7 col-md-push-5">
            <h2 class="featurette-heading">Leaderboard. <span class="text-muted">Where you stand.</span></h2>
            <p class="lead">
                See how you are faring against your friends and rivals.
                The leaderboard is updated daily.
            </p>
            @Html.ActionLink("Go to leaderboard", "Leaderboard", "Home", null, new { @class = "btn btn-default" })
        </div>
        <div class="col-md-5 col-md-pull-7">
            <img class="featurette-image img-responsive center-block" src="~/Content/logo.png" alt="Generic placeholder image">
        </div>
    </div>

    <hr class="featurette-divider">

    <div class="row featurette">
        <div class="col-md-7">
            <h2 class="featurette-heading">Predictions. <span class="text-muted">History.</span></h2>
            <p class="lead">
                See all the scores that you have predicted so far.
            </p>
            @Html.ActionLink("Go to prediction history", "Predictions", "Home", null, new { @class = "btn btn-default" })
        </div>
        <div class="col-md-5">
            <img class="featurette-image img-responsive center-block" src="~/Content/logo.png" alt="Generic placeholder image">
        </div>
    </div>

    @{
        if (User.Identity.Name.Equals(@"VISA\gmokhasi"))
        {
            <hr class="featurette-divider">

            <div class="row featurette">
                <div class="col-md-7">
                    <h2 class="featurette-heading">Admin Panel. <span class="text-muted">God Mode.</span></h2>
                    <p class="lead">
                        Update scores for fixtures that have been played. Also update leaderboard here.
                    </p>
                    @Html.ActionLink("Go update", "UpdateFixtures", "Home", null, new { @class = "btn btn-default" })
                </div>
                <div class="col-md-5">
                    <img class="featurette-image img-responsive center-block" data-src="holder.js/500x500/auto" alt="Generic placeholder image">
                </div>
            </div>
        }
    }

    <hr class="featurette-divider">

    <!-- /END THE FEATURETTES -->
</div>