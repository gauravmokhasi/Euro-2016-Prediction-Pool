@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Euro 2016 Prediction Pool</h1>
    <p class="lead">The Euro 2016 Prediction Pool lets you see fixtures and scores, as well as predict scores and compete against your friends in the leaderboard.
    To be eligible for the contest, you need to predict a match's outcome the day before it is played.
    Predicting the correct result is worth 3 points, goal difference is 5, and actual goals for/against is 8 points.
    </p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Fixtures and Scores</h2>
        <p>
            See upcoming fixtures and scores for completed games.
            You can also give your predictions here.
        </p>
        <p class="btn btn-default">@Html.ActionLink("Go to fixtures", "Fixtures", "Home")</p>
    </div>
    <div class="col-md-4">
        <h2>Leaderboard</h2>
        <p>
            See how you are faring against your friends and rivals.
            The leaderboard is updated daily.
        </p>
        <p class="btn btn-default">@Html.ActionLink("Go to leaderboard", "Leaderboard", "Home")</p>
    </div>
    <div class="col-md-4">
        <h2>Predictions</h2>
        <p>
            See all the scores that you have predicted so far.
        </p>
        <p class="btn btn-default">@Html.ActionLink("Go to prediction history", "Predictions", "Home")</p>
    </div>
    @{
        if (User.Identity.Name.Equals("VISA\\gmokhasi"))
        {
            <div class="col-md-4">
                <h2>Admin Panel</h2>
                <p>
                    Update scores for fixtures that have been played. Also update leaderboard here.
                </p>
                <p class="btn btn-default">@Html.ActionLink("Go update", "UpdateFixtures", "Home")</p>
            </div>
        }
    }
</div>