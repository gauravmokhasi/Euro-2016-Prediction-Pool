@model List<Euro2016.Models.Player>

@{
    ViewBag.Title = "Leaderboard";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Current Leaderboard based on player predictions. Each correct result prediction equals +3 points. Each correct score prediction equals +5 points.</p>

@{
    if (!Model.Any())
    {
        <div class="container">
            <p class="lead">No players are playing at the moment.</p>
        </div>
    }
    else
    {
        var grid = new WebGrid(Model, canPage: true, rowsPerPage: 12);
        @grid.GetHtml(
      htmlAttributes: new { id = "PointsTable" },
      columns: grid.Columns(
          grid.Column("UserName", header: "User Name"),
          grid.Column("Points")
         ),
         tableStyle: "table table-striped"
      )
    }
}